{% extends 'baseAdmin.html.twig' %}

{% block title %}Decortiqueur index{% endblock %}

{% block body %}
    <div class="content-wrapper">
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Decortiqueur</h1>
            </div> 
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Decortiqueur</li>
              </ol>
            </div> 
          </div> 
        </div> 
      </div>
      
      <section class="content">
        <div class="container-fluid">
          <a class="btn btn-success mt-2 mb-2" href="{{ path('app_admin_decortiqueur_new') }}">Ajouter un decortiqueur</a>
          <table id="plantermine" class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Adresse</th>
                    <th>Diplome</th>
                    <th>Description</th>
                    <th>Phone</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for decortiqueur in decortiqueurs %}
                <tr>
                    <td>{{ decortiqueur.user.id }}</td>
                    <td>{{ decortiqueur.user.nom }}</td>
                    <td>{{ decortiqueur.user.prenom }}</td>
                    <td>{{ decortiqueur.user.adresse }}</td>
                    <td>{{ decortiqueur.diplome }}</td>
                    <td>{{ decortiqueur.description }}</td>
                    <td>{{ decortiqueur.user.phone }}</td>
                    <td>
                        <a href="{{ path('app_admin_decortiqueur_show', {'id': decortiqueur.id}) }}"><i class="fa-solid fa-magnifying-glass mr-2 fa-2x"></i></a>
                        <a href="{{ path('app_admin_decortiqueur_edit', {'id': decortiqueur.id}) }}"><i class="fa-solid fa-edit fa-2x"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
          </table>
        </div> 
      </section>
    </div>


