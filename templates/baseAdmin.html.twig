    {% endblock %}

</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        {% include "includeAdmin/navbarAdmin.html.twig" %}
        {% include "includeAdmin/sidebar.html.twig" %}
        {% block body %}

        {% endblock %}
